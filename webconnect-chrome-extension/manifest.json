{
  "name": "WebConnect",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Allow web-pages to communicate with serial port.",
  "permissions": [
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "plugins": [
    {
      "path": "native/WCSerial.plugin",
      "public": false
    }
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [ "content-script.js" ],
      "matches": [ "http://*/*", "https://*/*", "file:///*" ],
      "run_at": "document_start"
    }
  ]
}
